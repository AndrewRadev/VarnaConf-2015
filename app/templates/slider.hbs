<div class="jumbotron">
  {{#if isMaxNumberOfItems}}
    <h1>THE SLIDEST</h1>
  {{else if isMinNumberOfItems}}
    <h1>slide</h1>
  {{else}}
    <h1>Slider</h1>
  {{/if}}
</div>

{{input type="range" min=0 max=10 value=numberOfItems}}

<ul>
  {{#each numbers as |n|}}
    <li>Slide level: {{n}}</li>
  {{/each}}
</ul>

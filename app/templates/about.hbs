<div class="comments">
  {{#if commentMessage}}
    <div class="alert alert-success">
      {{commentMessage}}
      <a href class="pull-right" {{action 'removeMessage'}}>X</a>
    </div>
  {{/if}}

  <form {{action 'postComment' on='submit'}}>
    <p><input type="submit" value="Post"></p>
    <p>{{input type="text" value=email class="form-control" placeholder="Email"}}</p>
    <p>{{textarea value=body class="form-control" placeholder="Comment body" rows="20"}}</p>
  </form>
</div>
